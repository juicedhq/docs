        "groups": [
          {
            "group": "Guides",
            "pages": ["guides/index"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoint/ping",
              "api-reference/endpoint/leads"
            ]
          }
