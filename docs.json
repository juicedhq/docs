      },
      {
        "tab": "Changelog",
        "groups": [
          {
            "group": "Changelog",
            "pages": ["changelog/index"]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/images/juiced-wordmark_lm_sm.png",
